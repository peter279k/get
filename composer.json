{
    "name": "schnittstabil/get",
    "type": "library",
    "description": "Get nested array values and object properties.",
    "license": "MIT",
    "keywords": ["array", "object", "get", "value", "null", "coalescing", "nested"],
    "homepage": "https://github.com/schnittstabil/get",
    "authors": [
        {
            "name": "Michael Mayer",
            "email": "michael@schnittstabil.de"
        }
    ],
    "autoload": {
        "psr-4": {"Schnittstabil\\Get\\": "src"},
        "files": ["src/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {"Schnittstabil\\Get\\": "tests"}
    },
    "require": {
        "php": ">=5.6.0"
    },
    "require-dev": {
        "codeclimate/php-test-reporter": "^0.2.0",
        "fabpot/php-cs-fixer": "^1.10",
        "halleck45/phpmetrics": "^1.8",
        "phpmd/phpmd": "^2.3",
        "phpunit/phpunit": "^5.3",
        "sami/sami": "^3.1",
        "satooshi/php-coveralls": "^0.6.1",
        "squizlabs/php_codesniffer": "^2.5",
        "vladahejda/phpunit-assert-exception": "^1.0"
    },
    "scripts": {
        "clean": "rm -rf build/",
        "doc": [
            "sami.php update sami_configuration.php -v",
            "phpmetrics --report-html build/phpmetrics/metrics.html src/"
        ],
        "lint": [
            "phpcs -s --standard=PSR1,PSR2 src/ tests/",
            "phpmd src/Get.php text cleancode,codesize,controversial,design,naming,unusedcode",
            "php-cs-fixer fix --dry-run --diff src",
            "php-cs-fixer fix --dry-run --diff tests",
            "php-cs-fixer fix --dry-run --diff *.php"
        ],
        "test": [
            "phpunit",
            "composer lint"
        ]
    }
}
